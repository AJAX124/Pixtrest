<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-900 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
   <div class="profdetails flex flex-col items-center justify-center mt-20">
    <div class="relative">
        <span id="uploadicon" class="w-10 h-10 bottom-0 right-0 rounded-full bg-zinc-700 flex absolute items-center justify-center bg-zinc-200 cursor-pointer">
            <i class="text-white-800 ri-pencil-fill"></i>
        </span>
        <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
         </div>
    </div>
     <h1 class="text-3xl font-semibold mt-2"><%= user.name %></h1>
     <h3 class="text-md font-semibold mt-2">@<%= user.username%></h3>
     <a id="edit" class="px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold mt-5" href="/edit">Edit Profile</a>
     <a id="addnewpost" class="px-10 py-2 rounded-lg bg-red-500 font-semibold text-xs mt-3" href="/add">Add New Post</a>
   </div>
   <div class="cards flex flex-wrap gap-10 mt-8 px-10">
    <div class="card">
        <div class="w-40 bg-zinc-500 rounded-lg overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
        </div>
        <a href="/show/posts" class="inline-block text-xl font-semibold mt-3">Your Uploaded Posts Click On Me</a>
        <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> Posts</h5>
    </div>
   </div>
</div>

<script>
 document.querySelector("#uploadicon").addEventListener("click",function(){
    document.querySelector("#uploadform input").click()
 })
 document.querySelector("#uploadform input").addEventListener("change",function(){
    document.querySelector("#uploadform").submit()
 })
</script>

<% include ./partials/footer.ejs %>