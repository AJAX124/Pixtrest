<% include ./partials/header.ejs %>

 <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
      <h1 class="text-xl">Create a new Post .</h1>
      <hr class="opacity-10 mt-10">
      <form action="/createPost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 mt-5" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 mt-5 border-2 rounded-md text-black" type="text" placeholder="Title" name="title">
        <input class="block w-1/3 px-3 py-2 mt-5 border-2 rounded-md text-black" type="text" placeholder="Description" name="description">
        <input class="block w-1/3 px-3 py-2 mt-5  rounded-md bg-red-700" type="submit" value="Create Post">
      </form>
 </div>

